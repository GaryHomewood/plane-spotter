<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme">
    </style>

    <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme"/>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorPrimary">#111</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">#111</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="GalleryTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#000</item>
        <item name="colorPrimary">#000</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/gallery_status_background</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="GalleryCaption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>
